{
  "name": "anamn",
  "version": "0.1.0",
  "private": true,
  "description": "Anamn is a local-first, single-user second brain built on Markdown files.",
  "main": "electron/main.ts",
  "author": "",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "npm run build:preload && concurrently \"vite\" \"NODE_OPTIONS='--import tsx' electron .\"",
    "build": "vite build",
    "build:preload": "esbuild electron/preload.ts --bundle --platform=node --outfile=electron/preload.js --external:electron",
    "preview": "vite preview",
    "electron": "electron .",
    "typecheck": "tsc --noEmit && tsc --noEmit -p tsconfig.node.json"
  },
  "dependencies": {
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-markdown": "^10.1.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^30.0.0",
    "esbuild": "^0.27.2",
    "tsx": "^4.21.0",
    "typescript": "^5.4.0",
    "vite": "^5.2.0"
  }
}
